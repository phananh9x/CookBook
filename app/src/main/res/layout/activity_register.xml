<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RosyBrown1">




    <EditText
        android:id="@+id/name_register"
        android:padding="10dp"
        android:background="@drawable/duongvien_goctron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Full Name" />

    <EditText
        android:id="@+id/email_register"
        android:padding="10dp"
        android:background="@drawable/duongvien_goctron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/name_register"
        android:layout_alignRight="@+id/name_register"
        android:layout_below="@+id/name_register"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Email" />

    <EditText
        android:id="@+id/pass_regiser"
        android:padding="10dp"
        android:background="@drawable/duongvien_goctron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/re_pass_register"
        android:padding="10dp"
        android:background="@drawable/duongvien_goctron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pass_regiser"
        android:layout_alignStart="@+id/pass_regiser"
        android:layout_below="@+id/pass_regiser"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:hint="Re-Password"
        android:inputType="textPassword" />

    <Button
        android:background="@drawable/bg_corner_btn_blue"
        android:id="@+id/btn_signup_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_pass_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="Sign Up" />

    <ImageView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:src="@drawable/cookingforthefamily" />
</RelativeLayout>